# Environment Configuration
ENVIRONMENT=development
DEBUG=true

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=1

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=

# S3 Configuration (optional)
S3_BUCKET=whisper-trans
S3_REGION=us-east-1
S3_ACCESS_KEY=
S3_SECRET_KEY=

# Translation Configuration (required)
GOOGLE_API_KEY="your_google_api_key_here"
SUPPORTED_LANGUAGES=["en", "zh-CN", "zh-TW", "ja"]

# Worker Configuration
WORKER_MEMORY_LIMIT=90
WORKER_BATCH_SIZE=1
WORKER_HEARTBEAT_INTERVAL=30
WORKER_TIMEOUT=300

# File Configuration
UPLOAD_DIR=temp/uploads
RESULT_DIR=temp/results
MAX_FILE_SIZE=104857600
ALLOWED_AUDIO_FORMATS=[".mp3"]

# Logging Configuration
LOG_LEVEL=INFO
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s

# Task Configuration
TASK_RETRY_LIMIT=3
TASK_TIMEOUT=1800

# STT Configuration,whisper tiny base	74 M small	244 M	 medium	769 M	 large	1550 M	x	âœ“ large-v2
WHISPER_MODEL=base
WER_THRESHOLD=0.3 